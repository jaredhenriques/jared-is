---
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{post.data.title} / Jared Henriques</title>
		<style>
			@font-face {
				font-family: 'Reader';
				src: url('/fonts/reader-regular.woff2') format('woff2'),
					 url('/fonts/reader-regular.woff') format('woff');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-size: 18px;
			}

			body {
				font-family: 'Reader', Georgia, serif;
				line-height: 1.7;
				color: #2c2c2c;
				background: #f8f6f3;
				min-height: 100vh;
				padding: 4rem 2rem;
				transition: background 0.3s, color 0.3s;
			}

			main {
				max-width: 600px;
				margin: 0 auto;
			}

			header {
				margin-bottom: 2.5rem;
			}

			h1 {
				font-size: 1.4rem;
				font-weight: normal;
				margin-bottom: 0.5rem;
				line-height: 1.4;
			}

			.date {
				color: #8a8a8a;
				font-size: 0.9rem;
			}

			article {
				color: #3d3d3d;
			}

			article p {
				margin-bottom: 1.25rem;
			}

			article h2 {
				font-size: 1.1rem;
				font-weight: normal;
				margin-top: 2.5rem;
				margin-bottom: 0.75rem;
				color: #2c2c2c;
			}

			article h3 {
				font-size: 1rem;
				font-weight: normal;
				margin-top: 2rem;
				margin-bottom: 0.5rem;
				color: #2c2c2c;
			}

			article a,
			article a:visited,
			article a:link {
				color: inherit;
				text-decoration: underline;
				text-underline-offset: 2px;
				transition: color 0.2s;
			}

			article a:hover {
				color: #c45d3a;
			}

			article ul, article ol {
				margin-bottom: 1.25rem;
				padding-left: 1.5rem;
			}

			article li {
				margin-bottom: 0.5rem;
			}

			article blockquote {
				border-left: 2px solid #d4d0c8;
				padding-left: 1.25rem;
				margin: 1.5rem 0;
				color: #6b6b6b;
				font-style: italic;
			}

			article strong {
				font-weight: normal;
				color: #1a1a1a;
			}

			article hr {
				border: none;
				border-top: 1px solid #e8e4dc;
				margin: 2.5rem 0;
			}

			.back {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid #e8e4dc;
			}

			.back a {
				color: #6b6b6b;
				text-decoration: none;
				font-size: 0.9rem;
				transition: color 0.2s;
			}

			.back a:hover {
				color: #c45d3a;
			}

			/* Dark mode */
			@media (prefers-color-scheme: dark) {
				body {
					background: #1a1918;
					color: #e8e4dc;
				}

				article {
					color: #d0ccc4;
				}

				article h2,
				article h3 {
					color: #e8e4dc;
				}

				article strong {
					color: #f0ece4;
				}

				article a:hover {
					color: #e89b7b;
				}

				article blockquote {
					border-left-color: #3a3938;
					color: #9a9590;
				}

				article hr {
					border-top-color: #2a2928;
				}

				.date {
					color: #7a7570;
				}

				.back {
					border-top-color: #2a2928;
				}

				.back a {
					color: #9a9590;
				}

				.back a:hover {
					color: #e89b7b;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<header>
				<h1>{post.data.title}</h1>
				<span class="date">{post.data.date}</span>
			</header>

			<article>
				<Content />
			</article>

			<div class="back">
				<a href="/writing">‚Üê All writing</a>
			</div>
		</main>
	</body>
</html>
