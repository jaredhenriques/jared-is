---
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(dateStr: string) {
	const date = new Date(dateStr);
	return date.toLocaleDateString('en-US', {
		month: 'long',
		day: 'numeric',
		year: 'numeric'
	});
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{post.data.title} / Jared Henriques</title>
		<style is:global>
			@font-face {
				font-family: 'Diatype';
				src: url('/fonts/ABCDiatype-Regular.woff2') format('woff2'),
					 url('/fonts/ABCDiatype-Regular.woff') format('woff');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-size: 18px;
			}

			body {
				font-family: 'Diatype', -apple-system, sans-serif;
				line-height: 1.6;
				color: #2c2c2c;
				background: #f8f6f3;
				min-height: 100vh;
				transition: background 0.3s, color 0.3s;
			}

			main {
				max-width: 540px;
				margin: 0 auto;
				padding: 3rem 2rem 6rem;
			}

			.site-header {
				margin-bottom: 4rem;
			}

			.site-header a {
				color: #8a8a8a;
				text-decoration: none;
				font-size: 0.875rem;
				letter-spacing: 0.01em;
				transition: color 0.2s;
			}

			.site-header a:hover {
				color: #c45d3a;
			}

			.post-header {
				margin-bottom: 3.5rem;
			}

			.post-meta {
				color: #8a8a8a;
				font-size: 0.875rem;
				letter-spacing: 0.02em;
				text-transform: uppercase;
				margin-bottom: 1rem;
			}

			h1 {
				font-size: 2rem;
				font-weight: normal;
				line-height: 1.3;
				color: #1a1a1a;
				letter-spacing: -0.01em;
			}

			article {
				color: #3d3d3d;
			}

			article p {
				margin-bottom: 1.5rem;
			}

			article h2 {
				font-size: 1.375rem;
				font-weight: normal;
				line-height: 1.4;
				color: #1a1a1a;
				margin-top: 3.5rem;
				margin-bottom: 1rem;
				letter-spacing: -0.01em;
			}

			article h3 {
				font-size: 1.125rem;
				font-weight: normal;
				line-height: 1.5;
				color: #1a1a1a;
				margin-top: 3rem;
				margin-bottom: 0.75rem;
			}

			article a,
			article a:visited,
			article a:link {
				color: inherit;
				text-decoration: underline;
				text-decoration-color: #c4b5a8;
				text-underline-offset: 3px;
				transition: text-decoration-color 0.2s;
			}

			article a:hover {
				text-decoration-color: #c45d3a;
			}

			article ul, article ol {
				margin-bottom: 1.5rem;
				padding-left: 1.5rem;
			}

			article li {
				margin-bottom: 0.625rem;
			}

			article li::marker {
				color: #8a8a8a;
			}

			article blockquote {
				border-left: 2px solid #d4d0c8;
				padding-left: 1.5rem;
				margin: 2rem 0;
				color: #6b6b6b;
				font-style: italic;
			}

			article strong {
				font-weight: normal;
				color: #1a1a1a;
			}

			article hr {
				border: none;
				border-top: 1px solid #e8e4dc;
				margin: 3rem 0;
			}

			article figure {
				margin: 2.5rem 0;
				width: 130%;
				margin-left: -15%;
			}

			article img,
			article figure img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 4px;
				margin-bottom: 0.75rem;
				border: 1px solid rgba(0,0,0,0.1);
				cursor: zoom-in;
				transition: opacity 0.2s;
			}

			article img:hover,
			article figure img:hover {
				opacity: 0.9;
			}

			/* Lightbox */
			.lightbox {
				display: none;
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(0, 0, 0, 0.9);
				z-index: 1000;
				cursor: zoom-out;
				padding: 2rem;
				box-sizing: border-box;
			}

			.lightbox.active {
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.lightbox img {
				max-width: 100%;
				max-height: 100%;
				object-fit: contain;
				border-radius: 4px;
			}

			article figcaption {
				font-size: 0.8125rem;
				color: #8a8a8a;
				line-height: 1.5;
				text-align: center;
			}

			.post-footer {
				margin-top: 4rem;
				padding-top: 2rem;
				border-top: 1px solid #e8e4dc;
			}

			.post-footer a {
				color: #8a8a8a;
				text-decoration: none;
				font-size: 0.875rem;
				transition: color 0.2s;
			}

			.post-footer a:hover {
				color: #c45d3a;
			}

			/* Mobile */
			@media (max-width: 640px) {
				html {
					font-size: 17px;
				}
				main {
					padding: 2rem 1.5rem 4rem;
				}
				.site-header {
					margin-bottom: 3rem;
				}
				.post-header {
					margin-bottom: 2.5rem;
				}
				h1 {
					font-size: 1.625rem;
				}
				article h2 {
					font-size: 1.25rem;
					margin-top: 2.5rem;
				}
				article h3 {
					font-size: 1.0625rem;
					margin-top: 2rem;
				}
				article figure {
					width: 100%;
					margin-left: 0;
				}
			}

			/* Dark mode */
			@media (prefers-color-scheme: dark) {
				body {
					background: #1a1918;
					color: #e8e4dc;
				}

				.site-header a {
					color: #7a7570;
				}

				.site-header a:hover {
					color: #e89b7b;
				}

				.post-meta {
					color: #7a7570;
				}

				h1 {
					color: #f0ece4;
				}

				article {
					color: #d0ccc4;
				}

				article h2,
				article h3 {
					color: #f0ece4;
				}

				article strong {
					color: #f0ece4;
				}

				article a {
					text-decoration-color: #4a4540;
				}

				article a:hover {
					text-decoration-color: #e89b7b;
				}

				article blockquote {
					border-left-color: #3a3938;
					color: #9a9590;
				}

				article hr {
					border-top-color: #2a2928;
				}

				article figcaption {
					color: #7a7570;
				}

				.post-footer {
					border-top-color: #2a2928;
				}

				.post-footer a {
					color: #7a7570;
				}

				.post-footer a:hover {
					color: #e89b7b;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<nav class="site-header">
				<a href="/">Jared Henriques</a>
			</nav>

			<header class="post-header">
				<div class="post-meta">{formatDate(post.data.date)}</div>
				<h1>{post.data.title}</h1>
			</header>

			<article>
				<Content />
			</article>

			<footer class="post-footer">
				<a href="/writing">‚Üê All writing</a>
			</footer>
		</main>

		<!-- Lightbox -->
		<div class="lightbox" id="lightbox">
			<img src="" alt="" id="lightbox-img">
		</div>

		<script>
			const lightbox = document.getElementById('lightbox');
			const lightboxImg = document.getElementById('lightbox-img');

			// Open lightbox when clicking article images
			document.querySelectorAll('article img').forEach(img => {
				img.addEventListener('click', () => {
					lightboxImg.src = img.src;
					lightboxImg.alt = img.alt;
					lightbox.classList.add('active');
					document.body.style.overflow = 'hidden';
				});
			});

			// Close lightbox when clicking anywhere
			lightbox.addEventListener('click', () => {
				lightbox.classList.remove('active');
				document.body.style.overflow = '';
			});

			// Close on escape key
			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape' && lightbox.classList.contains('active')) {
					lightbox.classList.remove('active');
					document.body.style.overflow = '';
				}
			});
		</script>
	</body>
</html>
