---
import { getCollection } from 'astro:content';

const posts = await getCollection('writing', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Writing / Jared Henriques</title>
		<style>
			@font-face {
				font-family: 'Reader';
				src: url('/fonts/reader-regular.woff2') format('woff2'),
					 url('/fonts/reader-regular.woff') format('woff');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-size: 18px;
			}

			body {
				font-family: 'Reader', Georgia, serif;
				line-height: 1.7;
				color: #2c2c2c;
				background: #f8f6f3;
				min-height: 100vh;
				padding: 4rem 2rem;
				transition: background 0.3s, color 0.3s;
			}

			main {
				max-width: 480px;
				margin: 0 auto;
			}

			.intro {
				margin-bottom: 3rem;
			}

			.intro p {
				color: #6b6b6b;
				font-style: italic;
			}

			.posts {
				list-style: none;
			}

			.post {
				margin-bottom: 1.5rem;
			}

			.post a {
				color: inherit;
				text-decoration: none;
				transition: color 0.2s;
			}

			.post a:hover {
				color: #c45d3a;
			}

			.post .date {
				color: #8a8a8a;
				font-size: 0.85rem;
				margin-right: 0.75rem;
			}

			.back {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid #e8e4dc;
			}

			.back a {
				color: #6b6b6b;
				text-decoration: none;
				font-size: 0.9rem;
				transition: color 0.2s;
			}

			.back a:hover {
				color: #c45d3a;
			}

			/* Mobile */
			@media (max-width: 600px) {
				html {
					font-size: 17px;
				}
				body {
					padding: 3rem 1.5rem;
				}
				.post {
					margin-bottom: 1.25rem;
				}
				.post .date {
					display: block;
					margin-bottom: 0.25rem;
				}
			}

			/* Dark mode */
			@media (prefers-color-scheme: dark) {
				body {
					background: #1a1918;
					color: #e8e4dc;
				}

				.intro p {
					color: #9a9590;
				}

				.post a:hover {
					color: #e89b7b;
				}

				.post .date {
					color: #7a7570;
				}

				.back {
					border-top-color: #2a2928;
				}

				.back a {
					color: #9a9590;
				}

				.back a:hover {
					color: #e89b7b;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<section class="intro">
				<p>I infrequently write some things.</p>
			</section>

			<ul class="posts">
				{sortedPosts.map((post) => (
					<li class="post">
						<span class="date">{post.data.date}</span>
						<a href={`/writing/${post.id}`}>{post.data.title}</a>
					</li>
				))}
			</ul>

			<div class="back">
				<a href="/">‚Üê Home</a>
			</div>
		</main>
	</body>
</html>
