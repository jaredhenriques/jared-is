---
import { getCollection } from 'astro:content';

const posts = await getCollection('writing', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

function formatDate(dateStr: string) {
	const date = new Date(dateStr);
	return date.toLocaleDateString('en-US', {
		month: 'short',
		day: 'numeric',
		year: 'numeric'
	});
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Writing / Jared Henriques</title>
		<style>
			@font-face {
				font-family: 'Diatype';
				src: url('/fonts/ABCDiatype-Regular.woff2') format('woff2'),
					 url('/fonts/ABCDiatype-Regular.woff') format('woff');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-size: 18px;
			}

			body {
				font-family: 'Diatype', -apple-system, sans-serif;
				line-height: 1.7;
				color: #2c2c2c;
				background: #f8f6f3;
				min-height: 100vh;
				padding: 2rem 2rem 4rem;
				transition: background 0.3s, color 0.3s;
			}

			main {
				max-width: 600px;
				margin: 0 auto;
			}

			.site-header {
				margin-bottom: 3rem;
			}

			.site-header a {
				color: #8a8a8a;
				text-decoration: none;
				font-size: 0.9rem;
				transition: color 0.2s;
			}

			.site-header a:hover {
				color: #c45d3a;
			}

			.intro {
				margin-bottom: 3rem;
			}

			.intro p {
				color: #6b6b6b;
				font-style: italic;
			}

			.posts {
				list-style: none;
			}

			.post {
				display: flex;
				align-items: baseline;
				margin-bottom: 0.75rem;
				gap: 1.5rem;
			}

			.post a {
				color: inherit;
				text-decoration: none;
				transition: color 0.2s;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				flex: 1;
				min-width: 0;
			}

			.post a:hover {
				color: #c45d3a;
			}

			.date {
				color: #8a8a8a;
				font-size: 0.85rem;
				flex-shrink: 0;
				width: 100px;
			}

			.back {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid #e8e4dc;
			}

			.back a {
				color: #6b6b6b;
				text-decoration: none;
				font-size: 0.9rem;
				transition: color 0.2s;
			}

			.back a:hover {
				color: #c45d3a;
			}

			/* Mobile */
			@media (max-width: 600px) {
				html {
					font-size: 17px;
				}
				body {
					padding: 1.5rem 20px 3rem;
				}
				.post {
					flex-direction: column;
					gap: 0.25rem;
					margin-bottom: 1.25rem;
				}
				.post a {
					white-space: normal;
					overflow: visible;
				}
				.date {
					width: auto;
					font-size: 0.8rem;
				}
			}

			/* Dark mode */
			@media (prefers-color-scheme: dark) {
				body {
					background: #1a1918;
					color: #e8e4dc;
				}

				.site-header a {
					color: #7a7570;
				}

				.site-header a:hover {
					color: #e89b7b;
				}

				.intro p {
					color: #9a9590;
				}

				.post a:hover {
					color: #e89b7b;
				}

				.date {
					color: #7a7570;
				}

				.back {
					border-top-color: #2a2928;
				}

				.back a {
					color: #9a9590;
				}

				.back a:hover {
					color: #e89b7b;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<nav class="site-header">
				<a href="/">Jared Henriques</a>
			</nav>

			<section class="intro">
				<p>Sometimes years pass between posts. When I do write, it's about brand, work, parenting, and whatever else I'm wrestling with.</p>
			</section>

			<ul class="posts">
				{sortedPosts.map((post) => (
					<li class="post">
						<span class="date">{formatDate(post.data.date)}</span>
						<a href={`/writing/${post.id}`}>{post.data.title}</a>
					</li>
				))}
			</ul>

			<div class="back">
				<a href="/">‚Üê Home</a>
			</div>
		</main>
	</body>
</html>
